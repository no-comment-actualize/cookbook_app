<h1>Recipes Index</h1>
<% @recipes.each do |recipe| %>
  <h2><%= recipe.title %></h2>
  <img src="<%= recipe.image_url %>" alt="">
  <h4>Ingredients: <%= recipe.ingredients %></h4>
  <h4>Directions: <%= recipe.directions %></h4>
  <h4>Prep time: <%= recipe.prep_time %></h4>
  <a href="/recipes/<%= recipe.id %>">More Info</a>
<% end %>