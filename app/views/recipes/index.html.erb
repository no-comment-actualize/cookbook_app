<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="display-4">Cheddar's Cookbook</h1>
    <p class="lead">These are all the recipes.</p>
  </div>
</div>


<div class="card-columns">

  <% @recipes.each do |recipe| %>

    <div class="card">
      <img src="<%= recipe.image_url %>" class="card-img-top" alt="...">
      <div class="card-body">
        <h5 class="card-title"><%= recipe.title %></h5>
        <p class="card-text">Ingredients: <%= recipe.ingredients %></p>
        <p class="card-text">Directions: <%= recipe.directions %></p>

        <a href="/recipes/<%= recipe.id %>" class="btn btn-success">More Info</a>
      </div>
    </div>

  <% end %>

</div>

